<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/phone_button"
                android:layout_height="52dp"
                android:layout_width="52dp"
                android:src="@drawable/ic_phone"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:visibility="gone" />

            <Space
                android:id="@+id/phone_button_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/camera_button"
                android:layout_height="52dp"
                android:layout_width="52dp"
                android:src="@drawable/ic_camera"
                android:scaleType="centerInside"
                android:padding="10dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/assist_button"
                android:layout_height="52dp"
                android:layout_width="52dp"
                android:src="@drawable/ic_assist"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:visibility="gone"/>

            <Space
                android:id="@+id/assist_button_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/voice_assist_button"
                android:layout_height="52dp"
                android:layout_width="52dp"
                android:src="@drawable/ic_voice_assist"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:visibility="gone"/>

            <Space
                android:id="@+id/voice_assist_button_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/wallpaper_button"
                android:layout_height="52dp"
                android:layout_width="52dp"
                android:src="@drawable/ic_wallpaper"
                android:scaleType="centerInside"
                android:padding="10dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/settings_button"
                android:layout_height="52dp"
                android:layout_width="52dp"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:padding="10dp" />
</LinearLayout>
